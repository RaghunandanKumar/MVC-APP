<div class="container-fluid">
  <div class=row>
    <div class="col-lg-7">

      <select class="browser-default custom-select" id="mySelect" onclick="myFunction()">
        <option selected>Select the student</option>
        <% var stuID; %>
        <% for (let i = students.length-1; i >= 0; i--) {   
              student = students[i]; 
              stuID = student
            %>
        <option value=<%- JSON.stringify(student) %></option><%=student.given %> </option> <% } %> </select> </div> <div
          class="col-lg-5">
          <!-- Card -->
          <div class="card">
            <div class="card-body">
              <h4 id="student-info" class="card-title"><a>Student Details</a></h4>
              <div id="myList">
              </div>
            </div>
          </div>
          <!-- Card -->
    </div>
    <script>
      function myFunction() {
        let str = document.getElementById("mySelect").value;

        if (str) {
          str = str.replace("</option", '');
          document.getElementById("myList").innerHTML = str;
        }
      }
    </script>
    <div class="col col-md-12">
      <a href="student/create" class="btn btn-primary new">
        Create a new student
      </a>

      <h2>Recent entries</h2>
      <p>There are
        <%= students.length %> students.
        <br>
      </p>
      <% for (let i = students.length-1; i >= 0; i--) {   
        student = students[i];   %>

      <div class="panel panel-default">
        <div class="panel-heading"></div>
        <div class="text-muted pull-right"></div>
        <div class="panel-body">


          <br> ID: <%=student._id %>
          <br> Email: <%=student.email %>
          <br> Given Name : <%=student.given %>
          <br> family Name: <%=student.family %>
          <br> Github: <%=student.Github %>
          <br> Website: <%=student.Website %>
          <br> GPA: <%=student.GPA %>
          <br> SectionID: <%=student.SectionID %>
          <hr>
          <a href="/student/delete/<%= student._id  %>" class="btn btn-danger"> Delete </a>
          <a href="/student/details/<%= student._id %>" class="btn btn-info"> Details </a>
          <a href="/student/edit/<%= student._id %>" class="btn btn-primary"> Edit </a>
          <hr>
          <hr>
        </div>
      </div>
      <% } %>

    </div>
  </div>
</div>